{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "dev:mobile": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "gen:types": {
      "dependsOn": ["@monorepo/supabase#start"],
      "outputs": ["**/types/database.ts"]
    },
    "@monorepo/supabase#start": {
      "cache": false
    }
  },
  "globalDependencies": [
    "tsconfig.base.json"
  ],
  "globalEnv": [
    "NODE_ENV",
    "SUPABASE_URL",
    "SUPABASE_ANON_KEY", 
    "SUPABASE_SERVICE_ROLE_KEY",
    "SUPABASE_PROJECT_REF"
  ]
}